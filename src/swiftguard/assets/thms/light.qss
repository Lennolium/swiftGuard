/* ########## Hide all frame borders ########## */
QFrame{
        border: 0px;
        border-style: none;
}

#centralwidget{
		background-color: rgb(253, 253, 255);
        border-radius: 16px;
		border-width: 1.5px;
		border-color: rgb(232, 234, 239);
		border-style: outset;

        background-image: url(':/icns/light/bg.png');
        background-repeat: no-repeat;
        background-position: right bottom;

}


#usb_left QPushButton{
		background-color: transparent;
		color: rgb(252, 252, 252);
		text-align:left;
		letter-spacing: 1.8px;
		font-weight: 700;
}


#usb_allowed{
		background-color: transparent;
		color: rgb(252, 252, 252);
		text-align:left;
		letter-spacing: 0.7px;
		font-weight: 600;
         border: none;
}



